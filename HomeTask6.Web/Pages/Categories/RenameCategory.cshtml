@page
@model HomeTask6.Web.Pages.Categories.RenameCategoryModel
@{
    ViewData["Title"] = "Rename category";
}
<form method="post" class="decor">
    <div class="form-left-decoration"></div>
    <div class="form-right-decoration"></div>
    <div class="circle"></div>
    <div class="form-inner">
        <div class="wrap-long-text-step-edit">
            <h3>@ViewData["Title"]</h3>
            <input class="form-input-text" type="text" placeholder="Name category" value="@Model.NameCategory" name="nameCategory" id="nameCategory" required />
            <input class="form-input" type="submit" value="Save"
                   asp-page-handler="SaveCategoryChanges"
                   asp-route-categoryId=@Model.SelectedCategory.Id
                   asp-route-nameCategory=nameCategory
                   asp-route-parentCategoryId=@Model.SelectedCategory.ParentId />
        </div>
    </div>
</form>