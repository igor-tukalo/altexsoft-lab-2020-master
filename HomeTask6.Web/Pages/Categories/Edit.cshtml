@page "{id}"
@model HomeTask6.Web.Pages.Categories.CategoriesEditModel
@{
    int categoryId = int.Parse(RouteData.Values["id"].ToString());
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <label for="nameCategory">Name category:</label><br />
    <input type="text" value="@Model.CurrentCategoryName" name="nameCategory" id="nameCategory" /><br /><br />
    @if (categoryId != 1)
    {
        <label for="nameRootCategory">Change root category:</label><br />
        <input type="text" value="@Model.ParentСategoryName" name="nameRootCategory" id="nameRootCategory" />
        <input type="submit" value="Find" asp-page-handler="FindCategories" asp-route-parentСategoryName=nameRootCategory />
        <select asp-for="SelectedFoundCategory" asp-items="@Model.FoundCategories">
            <option>Select parent category</option>
        </select>
        <br /><br />
    }
    <input type="submit" value="Save" />
</form>
