@page
@model HomeTask6.Web.Pages.Recipes.CreateRecipeModel
@{
    ViewData["Title"] = "Create recipe";
}
<form method="post" class="decor">
    <div class="form-left-decoration"></div>
    <div class="form-right-decoration"></div>
    <div class="circle"></div>
    <div class="form-inner">
        <h3>@ViewData["Title"] in the category «@Model.CategoryName»</h3>
        <input class="form-input-text" type="text" placeholder="Enter recipe name" name="nameRecipe" id="nameRecipe" required />
        <textarea class="textarea-input" placeholder="Enter description recipe" name="descRecipe" id="descRecipe"></textarea>
        <input class="form-input" type="submit" value="Create" asp-page-handler="CreateRecipe" asp-route-categoryId=@Model.CategoryId />
        <a class="form-input" asp-page="RecipesIndex"
           asp-page-handler="GetRecipes"
           asp-route-categoryId=@Model.CategoryId>Back to recipes</a>
    </div>
</form>